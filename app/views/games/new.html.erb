<h1>NEW GAME</h1>
<p>Here is your grid:</p>
<p>What is the longest word you can find?</p>
<%= @letters.join(" ") %>


<form action="/score" method="post" data-turbo="false" class="input-group mb-3">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="play" class="form-control" aria-label="Recipient's username" aria-describedby="basic-addon2"/>
  <%= hidden_field_tag :grid, @letters %>
  <input type="submit" value="Play!" class="btn">
</form>
